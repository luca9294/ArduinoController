<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="arduino.controller.CommandsFragment"
    android:weightSum="1"
    android:background="@android:color/background_dark">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:srcCompat="@drawable/android_logo"
        android:id="@+id/imageView4"
        android:layout_weight="0.84" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTemp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Temperature"
            android:ems="10"
            android:id="@+id/etTemp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvHum"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Humidity"
            android:ems="10"
            android:id="@+id/etHum"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvBrigh"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="Brightness"
            android:ems="10"
            android:id="@+id/etBright"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences|textPersonName"
            android:text="Up"
            android:ems="10"
            android:id="@+id/etUp"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDown"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Down"
            android:ems="10"
            android:id="@+id/etDown"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLeft"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Left"
            android:ems="10"
            android:id="@+id/etLeft"
            android:textAlignment="center"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRight"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@android:color/background_light"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <EditText
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Right"
            android:ems="10"
            android:id="@+id/etRight"
            android:textAlignment="center"
            android:textSize="18sp"
            android:singleLine="false"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20sp" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveBtn" />


</LinearLayout>
